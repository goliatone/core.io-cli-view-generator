{% import './__inputs.swig' as form -%}
<!--
Autogenerated file: {{label}}
{{now|date('Y-m-d h:m:s')}}
-->
{%- for field in fields %}
    {{- form.styles(field) -}}
    {{- form.scripts(field) -}}
{%- endfor %}

<div id="{{label}}-form-content">
    <form id="{{label}}-main-form" method="<%= method %>" action="<%= action %>"  class="form">

        {%- for prop in fields %}
            {{- form.input(prop.element, prop) -}}
        {%- endfor %}

        <% if(record.id){ %>
            <input hidden="true" name="id" value="<%= record.id %>" required/>
        <% } %>

        <div class="pull-right">
        {{- form.button('submit', 'Save', 'primary')}}
        {{- form.button('reset', 'Cancel')}}
        </div>
    </form>
</div>
