<!--
Autogenerated file: {{label}}
{{now|date('Y-m-d h:m:s')}}
-->
<div id="form-content" class="content-table">
    <table id="{{identity}}_grid" class="display table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>{% for field in fields %}
                <th>{{field.label}}</th>{% endfor %}
            </tr>
        </thead>
        <tfoot>
            <tr>{% for field in fields %}
                <th>{{field.label}}</th>{% endfor %}
            </tr>
        </tfoot>

        <tbody>
        <%
            records && records.forEach(function(item){ %>
                <tr>
                {%- for field in fields %}
                    <td>
                        {% if field.primaryKey %}
                        {% set pk = field.name %}
                        <a href="{{uri}}/<%= item.{{field.name}} %>">
                            <%= item.name %>
                        </a>
                        {% elif field.relType === 'one-to-many'%}
                        <% if(item.{{field.name}}){ %>
                            <a class="user" href="/admin{{uri}}/<%= item.{{field.name}}.id %>">
                                <%= item.{{field.name}}.email %>
                            </a>
                        <% } else { %>
                            ---
                        <%}%>
                        {% else %}
                        <%= item.{{field.name}} %>
                        {% endif %}
                    </td>
                {%- endfor %}
                </tr>
        <% }) %>
        </tbody>
    </table>
</div>
